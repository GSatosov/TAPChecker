<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.PlagiarismTableController"
            prefHeight="400.0" prefWidth="600.0" >

    <VBox AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="10" spacing="10">
        <HBox spacing="10">
            <VBox spacing="10">
                <Text text="Subjects:"/>
                <ChoiceBox fx:id="subjectsList"/>
            </VBox>
            <VBox spacing="10">
                <Text text="Tasks:"/>
                <ChoiceBox fx:id="tasksList"/>
            </VBox>
        </HBox>
        <TableView fx:id="plagiarismTable" VBox.vgrow="always"/>
    </VBox>

</AnchorPane>
