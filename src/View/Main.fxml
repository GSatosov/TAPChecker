<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TabPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.MainController"
            prefHeight="480" prefWidth="640">

    <HBox AnchorPane.topAnchor="5" AnchorPane.rightAnchor="5" AnchorPane.leftAnchor="5"
          spacing="10">
        <Button fx:id="tests" text="Run tests" />
        <Button fx:id="switchTables" text="Switch tables"/>
        <Button fx:id="settings" text="Settings"/>
    </HBox>
    <TabPane fx:id="results"
               AnchorPane.topAnchor="40" AnchorPane.rightAnchor="5" AnchorPane.leftAnchor="5"
               prefHeight="400"/>
    <TabPane fx:id="plagiary"
               visible="false"
               AnchorPane.topAnchor="40" AnchorPane.rightAnchor="5" AnchorPane.leftAnchor="5"
               prefHeight="400" />
</AnchorPane>
